@model EcommerceMVC.EcommerceDTOs.LoginRequest

@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>
<link rel="stylesheet" href="~/css/login.css"/>
<div class="col-md-12">
    <div class="col-md-4">
    <form class="form-control" method="post" action="">
        <label class="form-label">Username</label>
        <input type ="text" class="input-group-text" name="username" id="username" required=required/>
        <label class="form-label">Password</label>
        <input type ="text" class="input-group-text" name="password" id="password" required=required/>
        <br />
        <input type="submit" class="btn-outline-primary btn-sm" name="submitLogin" value="Next" />
    </form>
    <a href="/login/register" class="text-danger"><u>Not a member yet? Sign Up</u></a>
    </div>
</div>
<script src="~/js/login.js"></script>